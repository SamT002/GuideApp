<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rst_main_photo"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp" />

        <ImageView
            android:id="@+id/image_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_up"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

        <TextView
            android:id="@+id/rst_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/image_up"
            android:layout_toEndOf="@+id/rst_main_photo"
            android:text="Arka"
            android:fontFamily="@font/montserrat_alternates"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/info_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rst_main_photo"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_info_24" />

        <TextView
            android:visibility="gone"
            android:id="@+id/desc_r_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rst_main_photo"
            android:fontFamily="@font/montserrat_alternates"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/info_r"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_r_1"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/r_location"
            android:linksClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc_r_1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/location_image"
            android:visibility="gone"
            android:textAlignment="textStart"
            android:fontFamily="@font/montserrat_alternates"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/image_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_location"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_local_phone_24" />

        <TextView
            android:id="@+id/r_phone"
            android:layout_width="wrap_content"
            android:autoLink="phone"
            android:layout_height="wrap_content"
            android:layout_below="@id/r_location"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/image_phone"
            android:visibility="gone"
            android:textAlignment="textStart"
            android:fontFamily="@font/montserrat_alternates"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>